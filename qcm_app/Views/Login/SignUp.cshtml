@model User

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a style="color:darkred" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">qcm_app</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a style="color:darkred" class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                    </li>
                    <li class="nav-item">
                        <a style="color:darkred" class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="SignUp">Register</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div style="background-color:lightskyblue" class="container">
    <main role="main" class="pb-3">
        <form method="post" asp-controller="Login" asp-action="SignUp">
            <div class="border p-3 mt-4">
                <div style="color:darkred" class="mb-3">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div style="color:darkred" class="mb-3">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button style="background-color:indianred; border-color:darkred" type="submit" class="btn btn-primary" style="width:150px">Sign Up</button>
            </div>
        </form>
    </main>
</div>


