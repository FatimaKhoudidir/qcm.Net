@model IEnumerable<Quiz>

@{
    ViewData["Title"] = "Quiz Page";
}

<header>
    <nav style="background-color:crimson;" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a style="color:darkred" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">qcm_app</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a style="color:darkred" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Quiz</a>
                    </li>
                    <li class="nav-item">
                        <a style="color:darkred"  class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="LogOut">LogOut</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div style="background-color:lightskyblue"  class="container">
    <main role="main" class="pb-3">
        <form method="post" asp-action="IndexP">
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h4 style="color:darkred"> Hello @ViewBag.email</h4>
                    <h2   class="text-primary">Choose Quiz</h2>
                    <hr />
                </div>
                <div class="mb-3">
                    <select name="quiz-select" id="quiz-select">
                        @if (Model != null)
                        {
                            foreach (Quiz q in Model)
                            {
                                <option value="@q.Id">@q.Name</option>
                            }
                        }
                    </select>
                </div>
                <button style="background-color:indianred; border-color:darkred" type="submit" class="btn btn-primary" style="width:150px">Ok</button>
            </div>
        </form>
    </main>
</div>


